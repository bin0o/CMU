<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PharmacIST" parent="Theme.Material3.DayNight.NoActionBar" >
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ist_blue</item>
        <item name="colorPrimaryVariant">@color/ist_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/baby_blue</item>
        <item name="colorSecondaryVariant">@color/baby_blue</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textSize">18sp</item>
        <item name="titleTextColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.PharmacIST.AddMedicinePopUp" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>